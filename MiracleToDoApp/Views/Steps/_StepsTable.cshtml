@model IEnumerable<MiracleToDoApp.Models.Step>

<div id="progressBarSteps">
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width:@(ViewBag.Percent)%"></div>
    </div>
</div>

<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!item.isDone)
                    {
                        @Html.DisplayFor(modelItem => item.Description)
                    }
                    else
                    {
                        <div class="CompletedStep">@Html.DisplayFor(modelItem => item.Description)</div>
                    }
                </td>
                <td>
                    @Html.CheckBoxFor(modelItem => item.isDone, new { id = item.Id, @class = "ActiveCheck" })
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/Custom_Scripts/AddCheckBoxListener.js"></script>